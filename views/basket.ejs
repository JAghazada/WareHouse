<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css"
    integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
  <link rel="stylesheet" href="/css/style.css">
</head>

<body>
  <%- include("partials/navbar.ejs") %>
    <!-- !loader -->
   <section>
    <div class="lds-ring">
      <div></div>
      <div></div>
      <div></div>
      <div></div>
    </div>
   </section>
    <div class="container mt-5">
      
      <h4 style="font-weight: 600;">Sebet</h4>
      <div class="basket-pg-wrapper el-center">
        <div class="w-100 basket-pg-section">

          <% basket.map(prod=>{ %>
            <div class="bordered row el-center">
              <!-- !img -->
              <div class="basket-pg-image col-md-2">
                <% if(prod.Link!==undefined){ %>
                  <img height="40" src="/img/<%= (prod.Link) %>"" alt="">
                <%}
                else{%>
                    <img src=" /img/th.png" alt="">
                  <% }%>
              </div>
              <!-- !name -->
              <div class="basket-pg-product-info col-md-3">
                <div class="basket-pg-product-barcode">
                  <%=prod.MainCode%>
                </div>
                <div class="basket-pg-product-name">
                  <%=prod.ProductName%>
                </div>
              </div>
              <!-- !product price -->
              <div class="basket-pg-product-price">
                <div>Dene Qiymeti</div>
                <div class="bold-price">
                  <%=prod.SellingPrice%>₼
                </div>
              </div>
              <!-- !buttons -->
              <div class="basket-pg-product-price-operations  col-md-2">

                <button class="btn quantity-btns decrease-btn secondary"
                  onclick="changeProductCount('<%=prod._id%>','<%=prod.productCount-1%>')">-</button>

                <span class="basket-pg-quantity">
                  <%=prod.productCount%>
                </span>

                <button class="btn quantity-btns increase-btn secondary">+</button>

              </div>
              <!-- !total price -->
              <div class="basket-pg-total-price col-md-2">
                <div>Umumi mebleg</div>
                <div class="bold-price">
                  <%=prod.SellingPrice*prod.productCount %>
                </div>
              </div>
              <!-- !delete product -->
              <div class="basket-pg-product-delete col-md-1">
                x
              </div>
            </div>
            <hr width="90%" style="margin: 0 auto;">
            <% }) %>
        </div>
      </div>
      <!-- !Info about client -->
      <div class="other-infos d-md-flex  justify-content-between mt-2">
        <!-- !client name -->
        <h5 style="font-weight: 500;" class="mt-3 mb-0 mt-md-0"> Sifarişçi : <span style="color: #04aab6">Cəmil
            Ağazadə</span> </h5>
        <h5 class="text-md-center mt-3 mt-md-0 mb-0" style="font-weight: 600;"> Mehsullar Toplami:
          <!-- !basket total price -->
          <%=basket.totalBasketPrice %>₼
        </h5>
      </div>
      <div class="mt-3 mt-md-2">
        <!-- !receipt number -->
        <h5 class="mb-0"> Qəbz Nömrəsi : <span style="color: #04aab6">98007654145</span></h5>
      </div>
      <div class="mt-3 mt-md-2">
        <!-- !order history -->
        <h5 class="mb-0"> Sifariş Tarixi : <span style="color: #04aab6">09.04.2023</span></h5>
      </div>
      <div class="d-flex mt-md-3">
        <!-- !approve order button -->
        <button style="background-color: #1072b3; color: #fafafa;padding: 7px 25px;" class="btn">Sifarişi
          Təsdiqlə</button>
      </div>
    </div>
    <script src="/js/utilities/changeProductCount.js"></script>
   
</body>
<script>




</script>
</html>