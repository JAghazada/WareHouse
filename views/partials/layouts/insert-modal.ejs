<div class="insert-modal">
    <div>
      <div class="preview">
        <p>Məhsul adı:<span class="val preview-name"> </span> </p>
        <p>Firma:<span class="val preview-company"> </span> </p>
        <p>Sayı:<span class="val preview-count"></span> </p>
        <p>Ölçü Vahidi :<span class="val  preview-unit">1 Əd</span> </p>
        <p>Ölçü Vahidi2 :<span class="val  preview-unit-2">1 Əd</span> </p>
        <p>Alış Qiyməti:<span class="val  preview-price"> </span> </p>
        <p>Satış Qiyməti:<span class="val  preview-selling-price"> </span></p>
        <p>Barkodlar:
          <span class="val  preview-qrcode"></span>
        </p>
        <div class="mt-2 d-flex">
          <p>Şəkil:
          <div id="preview-img">
          </div>
          <br>
          </p>

        </div>
        <div class="mt-1">
          <button class="btn delete-img pl-4 pr-4 pb-2 pt-2 btn-secondary">Şəkli Sil</button>
        </div>
      </div>
      <div class="layout">
        <div class="d-flex justify-content-end w-100">
          <div class="closeModal">
            <p>x</p>
          </div>
        </div>
        <div class="form-wrapper">
          <p class="text-center">Məhsul Məlumatları</p>
          <form method="post" autocomplete="off" action="/uploadProduct">

            <div class="form-group">
              <label for="productName">Məhsul adı</label>
              <input class="form-control insert-input  product_name" id="productName" placeholder="Məhsul adı">
            </div>
            <div class="form-group">
              <label for="productName">Firma adı</label>
              <input class="form-control insert-input  product_company " id="productCompany" placeholder="Firma adı">
            </div>


            <div class="form-group">
              <label for="productCount">Məhsul sayı</label>
              <input class="form-control insert-input  product_count " id="productCount" type="text" placeholder="Məhsul sayı">
            </div>
            <div class="d-flex unit-lists">
              <div class="form-group unit-p">
                <label for="UnitOfMeasurment">Ölçü Vahidi</label>
                <select id="UnitOfMeasurment" class="custom-select selectUnit">
                  <option selected value="number">Əd</option>
                  <option value="kg">Kg</option>
                  <option value="cm">Sm</option>
                  <option value="dm">Dm</option>
                  <option value="box">Qutu</option>
                  <option value="meter">Metr</option>
                  <option value="block">Blok</option>
                  <option value="wholesale">Top</option>
                  <option value="bag">Kisə</option>
                  <option value="set">Dəst</option>
                  <option value="packet">Paket</option>
                </select>
              </div>
              <div class="form-group unit-p">
                <label for="UnitOfMeasurment">Ölçü Vahidi 2</label>
                <select id="UnitOfMeasurment2" class="custom-select selectUnit">
                  <option selected value="number">Əd</option>
                  <option value="kg">Kg</option>
                  <option value="cm">Sm</option>
                  <option value="dm">Dm</option>
                  <option value="box">Qutu</option>
                  <option value="meter">Metr</option>
                  <option value="block">Blok</option>
                  <option value="wholesale">Top</option>
                  <option value="bag">Kisə</option>
                  <option value="set">Dəst</option>
                  <option value="packet">Paket</option>
                </select>
              </div>
            </div>
            <div class="d-flex jsutify-content-between">
              <div class="input-group input-group-sm mb-3">
                <div class="input-group-prepend">
                  <span class="input-group-text unit-v1" id="inputGroup-sizing-sm ">Əd</span>
                </div>
                <input type="text" value="1" class="form-control insert-input  unit-1-inp" aria-label="Sizing example input"
                  aria-describedby="inputGroup-sizing-sm">
              </div>
              <span class="equal"> = </span>
              <div class="input-group input-group-sm mb-3">
                <div class="input-group-prepend">
                  <span class="input-group-text unit-v2" id="inputGroup-sizing-sm">Əd</span>
                </div>
                <input type="text" class="form-control insert-input  unit-2-inp" value="1" aria-label="Sizing example input"
                  aria-describedby="inputGroup-sizing-sm">
              </div>

            </div>
            <div class="form-group">
              <label for="Price">Alış Qiyməti</label>
              <input class="form-control insert-input  product_price" type="text" id="Price" placeholder="Alış Qiyməti">
            </div>

            <div class="form-group">
              <label for="SellingPrice">Satış Qiyməti</label>
              <input class="form-control insert-input  product_selling-price " type="text" id="SellingPrice"
                placeholder="Satış Qiyməti">
            </div>

            <div class="form-group">
              <label for="QRcode">QR kod</label>
              <input class="form-control insert-input  product_qrcode " type="text" id="QRcode" placeholder="QR kod">
            </div>


            <div class="custom-file">

              <input type="file" class="custom-file-input insert-input" id="ChooseImage">
              <label class="custom-file-label" for="ChooseImage">Şəkil seç</label>
            </div>
            <div class="img-area"></div>

            <button type="button" class="mt-2 create-product-btn  btn btn-primary">Göndər</button>

          </form>

        </div>
      </div>
    </div>
  </div>
