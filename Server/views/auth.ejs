<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css"
    integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
<link rel="stylesheet" href="/css/style.css">
<div class="auth-layout">
    <div class="auth-wrapper">
        <!-- !links -->
        <div class="auth-links">
            <a href="" class="active-link auth-login">Login</a>
            <a href="" class="auth-register">Register</a>
        </div>
        <!-- ? login wrapper -->
        <div class="login-wrapper">
            <div class="login-inputs">
                <input type="text" placeholder="nickname" class="form-control login-name">
                <input type="password" placeholder="password" class="form-control login-pass">
            </div>
            <!-- * login button -->
            <div class="el-center">
                <button class="btn auth-btn login-btn">Login</button>
            </div>
        </div>
        <!-- ? register wrapper -->
        <div class="register-wrapper">
            <div class="login-inputs">
                <input type="text" placeholder="nickname" class="form-control register-name">
                <input type="password" placeholder="password" class="form-control register-pass">
                <input type="password" placeholder="re -password" class="form-control register-re-pass">
            </div>
            <!-- * register button -->
            <div class="el-center">
                <button class="btn auth-btn register-btn">Register</button>
            </div>
        </div>
    </div>
</div>
<script src="/js/auth/index.js"></script>