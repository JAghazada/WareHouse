                    <div class="form-wrapper">
                        <p class="text-center">Məhsul Məlumatları</p>
                        <form method="post"  autocomplete="off" action="/uploadProduct">
            
                            <div class="form-group">
                                <label for="productName">Məhsul adı</label>
                                <input class="form-control product_name " id="productName" placeholder="Məhsul adı">
                            </div>
            
                          <div class="d-flex  justify-content-between">
                            <div class="form-group count-p">
                                <label for="productCount">Məhsul sayı</label>
                                <input class="form-control product_count " id="productCount" type="text" placeholder="Məhsul sayı">
                            </div>
                            <div class="form-group unit-p">
                                <label for="UnitOfMeasurment">Ölçü Vahidi</label>
                                <select id="UnitOfMeasurment" class="custom-select selectUnit">
                                    <option selected  value="number">Ədəd</option>
                                    <!-- <option  value="custom">Digər</option> -->
                                    <option value="meter">Metrə</option>
                                    <option value="packet">Paket</option>
                                </select>
                            </div>
                            
                            <!-- <div class="form-group count-sub-p">
                                <label for="exampleInputPassword1">Packa'daki mehsul sayi</label>
                                <input class="form-control product-sub " id="exampleInputPassword1" type="text" placeholder="Məhsul sayı">
                            </div> -->
                          </div>
                          <div class="form-group opcc-wrapper">
                            <label for="OneProductContentCount">Vahid Məhsul sayı</label>
                            <input class="form-control" id="OneProductContentCount" placeholder="Vahid Məhsul sayı ">
                        </div>
            
                        
            
                            <div class="form-group">
                                <label for="Price">Alış Qiyməti</label>
                                <input class="form-control product_price" type="text" id="Price" placeholder="Alış Qiyməti">
                            </div>
            
                            <div class="form-group">
                                <label for="SellingPrice">Satış Qiyməti</label>
                                <input class="form-control product_selling-price " type="text" id="SellingPrice" placeholder="Satış Qiyməti">
                            </div>
            
                            <div class="form-group">
                                <label for="QRcode">QR kod</label>
                                <input class="form-control product_qrcode " type="text" id="QRcode" placeholder="QR kod">
                            </div>
                            
                            <!-- <div class="form-group unitofmeasurment-wrapper">
                                <label for="unitofmeasurment">Ölçü vahidi</label>
                                <input class="form-control unitofmeasurment " type="text" id="unitofmeasurment" placeholder="Ölçü vahidi">
                            </div> 
