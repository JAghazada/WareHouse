    <body>
        <div class="form-wrapper">
            <form method="post"  autocomplete="off" action="/uploadProduct">

                <div class="form-group">
                    <label for="exampleInputPassword1">Məhsul adı</label>
                    <input class="form-control product_name " id="exampleInputPassword1" placeholder="Məhsul adı">
                </div>

                <div class="form-group">
                    <label for="exampleInputPassword1">Məhsul sayı</label>
                    <input class="form-control product_count " id="exampleInputPassword1" type="text" placeholder="Məhsul sayı">
                </div>

              <div class="form-group">
                    <label for="exampleInputPassword1"></label>
                    <select class="custom-select selectUnit">
                        <option selected  value="number">Ədəd</option>
                        <option  value="custom">Digər</option>
                        <option value="meter">Metrə</option>
                        <option value="packet">Paket</option>
                    </select>
                </div>
                <div class="form-group unitofmeasurment-wrapper">
                    <label for="unitofmeasurment">Ölçü vahidi</label>
                    <input class="form-control unitofmeasurment " type="text" id="unitofmeasurment" placeholder="Ölçü vahidi">
                </div> 
                 <div class="form-group measurmentNumberWrapper">
                    <label for="measurmentNumber">1 <span>___</span>olan mehsul sayi</label>
                    <input class="form-control measurmentNumber_inp " type="text" id="measurmentNumber">
                </div>

                <div class="form-group">
                    <label for="exampleInputPassword1">Alış Qiyməti</label>
                    <input class="form-control price" type="text" id="exampleInputPassword1" placeholder="Alış Qiyməti">
                </div>

                <div class="form-group">
                    <label for="exampleInputPassword1">Satış Qiyməti</label>
                    <input class="form-control selling_price " type="text" id="exampleInputPassword1" placeholder="Satış Qiyməti">
                </div>

                <div class="form-group">
                    <label for="exampleInputPassword1">QR kod</label>
                    <input class="form-control qrcode " type="text" id="exampleInputPassword1" placeholder="QR kod">
                </div>
                <div class="custom-file">

                    <input type="file"  class="custom-file-input" id="choose-file">
                    <label class="custom-file-label" for="customFileLang">Şəkil seç</label>
                </div>
                <div class="img-area"></div>

                <button type="submit" class="btn btn-primary">Göndər</button>

            </form>
